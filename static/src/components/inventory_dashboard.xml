<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <t t-name="owl.OwlInventoryDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">
                                        Inventory Dashboard
                                    </h1>
                                    <div>
                                        <select class="form-select" t-model="state.selectedProduct">
                                            <option value="0">Select a Product</option>
                                            <t t-foreach="state.products" t-as="product" t-key="product.value">
                                                <option t-att-value="product.value">
                                                    <t t-esc="product.label"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <div>
                                        <select class="form-select">
                                            <option value="0">Select a Period</option>
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 1 Month</option>
                                            <option value="90">Last 3 Months</option>
                                            <option value="365">Last Year</option>

                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <StockCard name="'Incoming'" value="'201'" percentage="'23'"/>
                        <StockCard name="'Outgoing'" value="'321'" percentage="'17'"/>

                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="col m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h1 class="text-primary fw-bold">
                                    Monthly Stocks
                                </h1>
                                <div class="px-3 py-1 bg-primary cursor-pointer">
                                    <span class="fa fa-arrow-right text-white"/>
                                </div>
                            </div>
                            <ChartRenderer type="'bar'" title="'Monthly Stock Report'"/>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</odoo>
