<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <t t-name="owl.OwlInventoryDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">
                                        Inventory Dashboard
                                    </h1>
                                    <div>
                                        <select class="form-select" t-model="state.selectedProductCategory" t-on-change="onChangeCategory">
                                            <option value="0">Select a Product's Category</option>
                                            <t t-foreach="state.product_categories" t-as="category" t-key="category.value">
                                                <option t-att-value="category.value">
                                                    <t t-esc="category.label"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <div>
                                        <select class="form-select" t-model="state.period" t-on-change="onChangePeriod">
                                            <option value="0">Select a Period</option>
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 1 Month</option>
                                            <option value="90">Last 3 Months</option>
                                            <option value="365">Last Year</option>

                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <StockCard name="'Incoming'" value="state.incoming_picking.value" percentage="state.incoming_picking.percentage"/>
                        <StockCard name="'Outgoing'" value="state.outgoing_picking.value" percentage="state.outgoing_picking.percentage"/>

                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="col m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h1 class="text-primary fw-bold">
                                    Monthly Stocks
                                </h1>

                            </div>
                            <ChartRenderer type="'line'" title="'Monthly Stock Report'" labels="state.label_strings"/>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</odoo>
